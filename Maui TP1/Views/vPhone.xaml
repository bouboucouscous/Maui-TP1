<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_TP1.Views.vPhone"
             Title="vPhone">
    <VerticalStackLayout
        Spacing="20"
        Margin="10">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            Text="Info Téléphone"
            FontSize="22"
            HorizontalOptions="Center"/>
        <Label
            x:Name="lbPhoneInfo"
            HorizontalOptions="Center"
            HeightRequest="240"                             
            FontSize="22"/>
    </VerticalStackLayout>
    <ContentPage.ToolbarItems>
        <ToolbarItem 
            Text="Ecran" 
            Clicked="Ecran_Clicked"
            IconImageSource="{FontImage Glyph='E', Color=Black, Size=22}" />
        <ToolbarItem 
            Text="Batterie" 
            Clicked="Baterrie_Clicked"
            IconImageSource="{FontImage Glyph='B', Color=Black, Size=22}" />
    </ContentPage.ToolbarItems>
</ContentPage>